{
    "name":        "bicpi/html-converter",
    "type":        "library",
    "description": "HTML-to-Text converter library",
    "keywords":    ["html", "text", "converter", "bicpi"],
    "homepage":    "http://github.com/bicpi/HtmlConverter",
    "license":     "MIT",
    "authors": [
        {
            "name": "Philipp Rieber",
            "homepage": "https://philipp-rieber.net"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "symfony/process": "^2.7 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "bicpi\\HtmlConverter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bicpi\\HtmlConverter\\Tests\\": "tests/"
        }
    }
}
